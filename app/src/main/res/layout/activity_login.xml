<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.demolistapplication.demomoduls.kotlinTest.LoginActivity">

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/passward"
        android:layout_below="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/email"
        android:layout_below="@+id/passward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_zuce"
        android:layout_below="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        />

    <Button
        android:id="@+id/btn_logoin"
        android:layout_below="@+id/email"
        android:layout_toRightOf="@+id/btn_zuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        />


</RelativeLayout>
